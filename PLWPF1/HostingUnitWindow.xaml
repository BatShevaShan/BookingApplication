<Window x:Class="PLWPF1.HostingUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF1"
        mc:Ignorable="d"
        Title="HostingUnitWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AddHostingUnitButton" Content="Add"
            Margin="10" FontSize="50"  Background="Snow" Grid.Row="0" Click="AddHostingUnitButton_Click"/>
        <Button x:Name="PrivateAreaButton" Content="Private Area"
            Margin="10" FontSize="50"  Background="Snow" Grid.Row="1" Click="PrivateAreaButton_Click"/>
    </Grid>
</Window>
