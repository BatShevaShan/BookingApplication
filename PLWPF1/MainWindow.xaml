<Window x:Class="PLWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="GustRequestButton" Content="{DynamicResource GuestRequestString}"
            Margin="10" FontSize="30" Background="Snow" Grid.Row="0" Click="GustRequestButton_Click"/>
        <Button x:Name="HostingUnitButton" Content="{DynamicResource HostingUnitString}"
            Margin="10" FontSize="30"  Background="Snow" Grid.Row="1" Click="HostingUnitButton_Click"/>
        <Button x:Name="DirectorButton" Content="Director"
            Margin="10" FontSize="30"  Background="Snow" Grid.Row="2" Click="DirectorButton_Click"/>

        
    </Grid>
</Window>
