<Window x:Class="PLWPF1.DirectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF1"
        mc:Ignorable="d"
        Title="DirectorWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AllGuestRequestButton" Background="Snow" Content="All The Guest Requests"
            Margin="10" FontSize="30" Grid.Row="0" Click="AllGuestRequestButton_Click"/>
        <Button x:Name="AllOrderButton" Background="Snow" Content="All The Orders"
            Margin="10" FontSize="30" Grid.Row="1" Click="AllOrderButton_Click"/>
        <Button x:Name="AllHostingUnitButton" Background="Snow" Content="All The Hosting Units"
            Margin="10" FontSize="30" Grid.Row="2" Click="AllHostingUnitButton_Click"/>
        <Button x:Name="OthersButton" Background="Snow" Content="Others"
            Margin="10" FontSize="30" Grid.Row="3" Click="OthersButton_Click"/>


    </Grid>
</Window>
